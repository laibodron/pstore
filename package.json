{
  "name": "pstore",
  "private": "true",
  "version": "0.0.0",
  "scripts": {
    "b": "pnpm --filter @pstore/backend",
    "w": "pnpm --filter @pstore/webapp",
    "sh": "pnpm --filter @pstore/shared",
    "dev": "pnpm -r --parallel dev",
    "prettify": "pnpm -r --parallel prettify",
    "types": "concurrently 'pnpm b types' 'pnpm w types' 'pnpm sh types'",
    "lint": "concurrently 'pnpm b lint' 'pnpm w lint' 'pnpm sh lint'",
    "tl": "pnpm types && pnpm lint",
    "prepare": "husky"
  },
  "dependencies": {
    "cross-env": "^10.1.0",
    "dotenv-cli": "^10.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@eslint/json": "^0.13.2",
    "concurrently": "^9.2.1",
    "copyfiles": "^2.4.1",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-n": "^17.23.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "ts-node-dev": "^2.0.0",
    "ts-patch": "^3.3.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.45.0",
    "typescript-transform-paths": "^3.5.5"
  }
}
